@{
    ViewData["Title"] = "Login Page";
}
<div class="container-logsig">
    <form class="formulario" action="/action_page.php">
        <h2>Login Form</h2>
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" class="form-control caja" id="email" placeholder="Enter email" name="email">
        </div>
        <div class="form-group">
            <label for="pwd">Password:</label>
            <input type="password" class="form-control caja" id="pwd" placeholder="Enter password" name="pwd">
        </div>
        <div class="checkbox">
            <label><input type="checkbox" name="remember"> Remember me</label>
        </div>
        <button type="submit" class="btn btn-default buttonito">Submit</button>
    </form>
</div>